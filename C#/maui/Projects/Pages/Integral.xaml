<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projects.Pages.Integral"
             Title="Integral">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">

        <Label x:Name="resultLabel" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />
        <Label x:Name="progressLabel" Text="0%" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,30,0,0">
            <ProgressBar x:Name="progressBar" Margin="0" HorizontalOptions="FillAndExpand"  MaximumWidthRequest="300" Progress="0" />
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,30,0,0">
            <Button x:Name="startButton" Text="Start" Clicked="OnStartClicked" WidthRequest="100" />
            <Button x:Name="canselButton" Text="Cancel" Clicked="OnCancelClicked" WidthRequest="100" />
        </StackLayout>
        
    </StackLayout>

</ContentPage>