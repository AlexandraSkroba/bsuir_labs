<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_153504_Skroba.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_153504_Skroba.UI"
    xmlns:pages="clr-namespace:_153504_Skroba.UI.Pages">

    <FlyoutItem Title="Start Page" Icon="icon2.png">
        <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Authors" Icon="icon1.png">
        <ShellContent
                Title="Authors"
                ContentTemplate="{DataTemplate pages:Authors}"
                Route="Authors" />
    </FlyoutItem>

</Shell>
