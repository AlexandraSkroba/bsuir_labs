@page
@using WEB_153504_Skroba.Areas.Admin.Pages;
@model IndexModel

@{
    ViewData["Title"] = "Index";
    int prev = Model.Tea.CurrentPage == 1 ? 1 : Model.Tea.CurrentPage - 1;
    int next = Model.Tea.CurrentPage == Model.Tea.TotalPages ? Model.Tea.TotalPages : Model.Tea.CurrentPage + 1;
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tea.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tea.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tea.Items[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tea.Items[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tea.Items[0].ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tea.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.ImagePath" alt="Tea Image" style="max-width: 100px; max-height: 100px;">
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav><Pager current-page="@Model.CurrentPage" total-pages="@Model.TotalPages" is-admin="true"></Pager></nav>


